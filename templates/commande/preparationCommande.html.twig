{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="flex item-center justify-center text-5xl mt-8 mb-20"> Préparation des commandes </h2>
    {% if is_granted('ROLE_GERANT') %}
        <h4 class="h-6 mb-6 text-2xl mt-4 mb-3 font-bold"> Commandes en attente de livraison :</h4>
    {% endif %}
    <div class="grid grid-cols-4 gap-4 mx-32 mb-20">
        {% if is_granted('ROLE_GERANT') or is_granted('ROLE_LIVREUR') %}

            {% for commandeId, commande in commandeDetailsLivraison %}
                <div class="bg-gray-200 p-4 w-80 mb-6 flex flex-col justify-between">
                    <div class=" flex justify-center item-center mb-2 text-xl text-black mb-4 font-bold">Commande n°
                        : {{ commandeId }}</div>
                    {% for detailCommandePrepare in commande %}
                        {% for pizza in pizzas %}
                            {% if detailCommandePrepare.produit.id == pizza.id %}
                                <div class="flex justify-between">
                                    <div class="mb-2 text-xl text-black">{{ pizza.nom }}</div>
                                    <div class="mb-2 text-xl text-black">Quantité
                                        : {{ detailCommandePrepare.quantite }}</div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    {% if is_granted('ROLE_LIVREUR') %}
                        <a href="{{ path('_livrer', {'id': commandeId}) }} }}"
                           class="h-6 flex justify-center item-center hover:text-red-500 duration-200 text-2xl mt-4 mb-2 font-bold">Livraison
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {% if is_granted('ROLE_GERANT') %}
        <h4 class="h-6 mb-6 text-2xl mt-4 mb-3 font-bold"> Commandes en attente de préparation
            pour {{ premierePizza.dateHeurePreparation|date(' H:i') }} : </h4>
    {% endif %}
    <div class="grid grid-cols-4 gap-4 mx-32 mb-20">

        {% for commandeId, commandeDetail in commandeDetails %}
            <div class="bg-gray-200 p-4 w-80 mb-6 flex flex-col justify-between">
                <div class=" flex justify-center item-center mb-2 text-xl text-black mb-4 font-bold">Commande n°
                    : {{ commandeId }}</div>
                {% for detailCommande in commandeDetail %}
                    {% for pizza in pizzas %}
                        {% if detailCommande.produit.id == pizza.id %}
                            <div class="flex justify-between">
                                <div class="mb-2 text-xl text-black">{{ pizza.nom }}</div>
                                <div class="mb-2 text-xl text-black">Quantité : {{ detailCommande.quantite }}</div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
                <a href="{{ path('_etatPrepare', {'id': commandeId}) }} }}"
                   class="h-6 flex justify-center item-center hover:text-red-500 duration-200 text-2xl mt-4 mb-2 font-bold">Fin
                    de préparation</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}


