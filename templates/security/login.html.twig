{% extends 'base.html.twig' %}
{% block title %}PizzaOnLine - Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h2 class="flex item-center justify-center text-5xl mt-8 mb-20">Connectez-vous</h2>
        <div class="w-full flex justify-center items-center">


            <div class="w-1/3 flex justify-center items-center mt-12">
                <div class="block  text-3xl ">
                    <div class="mb-8 flex">
                        <label for="inputEmail" class="mr-4" style="flex: 1; text-align: start;">Email :</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               style="text-align: start;"
                               autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-8 flex">
                        <label for="inputPassword" class="mr-4" style="flex: 1; text-align: start;">Mot de passe :</label>
                        <input type="password" name="password" id="inputPassword" style="text-align: start;"
                               autocomplete="current-password" required>
                    </div>


                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="mb-12 justify-center items-center flex">
                        {#                    <button type="submit" class="ml-32 btn flex justify-center items-center text-2xl hover:text-red-500 duration-200 font-bold">Connection</button> #}
                        <button type="submit"
                                class="font-bold text-2xl flex justify-center items-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300  rounded-lg px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                            Connexion
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </form>
    <a href="{{ path('app_register') }}"
       class=" flex justify-center items-center text-2xl hover:text-red-500 duration-200 font-bold"> Si vous n'avez pas
        de compte, cliquez ici pour en cr√©er un !</a>
{% endblock %}
