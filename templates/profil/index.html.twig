{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="flex content-center justify-center text-5xl mt-12"> Profil de {{ user.prenom }} </h1>
    <div class="w-1/3 mx-auto">
        <div class=" flex flex-col items-center justify-center mt-24 rounded border-2 border-white">

            <div class="w-full flex space-x-4 mt-10 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5">
                    Nom :
                </div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5">
                    {{ user.nom }}
                </div>
            </div>
            <div class="w-full flex space-x-4 mt-5 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5 ">Prenom :</div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5"> {{ user.prenom }}</div>
            </div>
            <div class="w-full flex space-x-4 mt-5 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5">Email :</div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5"> {{ user.email }}</div>
            </div>
            <div class="w-full flex space-x-4 mt-5 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5">Sexe :</div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5"> {{ user.sexe }}</div>
            </div>
            <div class="w-full flex space-x-4 mt-5 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5">Adresse :</div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5"> {{ user.adresse }}</div>
            </div>
            <div class="w-full flex space-x-4 mt-5 ">
                <div class="w-1/2 flex justify-end  text-3xl mr-5">Téléphone :</div>
                <div class="w-1/2 flex justify-start  text-3xl ml-5"> {{ numeroAvecEspaces }}</div>
            </div>
            {% if is_granted('ROLE_GERANT') %}
                <div class="w-full flex space-x-4 mt-5 ">
                    <div class="w-1/2 flex justify-end  text-3xl mr-5">Role :</div>
                    <div class="w-1/2 flex-col justify-start  text-3xl ml-14">
                        {% for role in user.roles %}
                            <div> {{ role }} </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            <a href="{{ path ('_modificationProfil', { 'id': user.id }) }}"
               class="  hover:text-red-500 duration-200 mt-14 mb-6 text-4xl"> Modification du profil</a>

        </div>
    </div>

{% endblock %}