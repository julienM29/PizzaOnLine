{% extends 'base.html.twig' %}

{% block body %}
<h1 class="flex content-center justify-center text-5xl mt-8"> Profil de {{ user.prenom }} </h1>
    <div class="flex flex-col items-center justify-center">
        <div class="flex space-x-4 mt-8 w-52">
            <div class="flex justify-start w-1/2 text-2xl"> <!-- Div de gauche -->
                Nom :
            </div>
            <div class="flex justify-end w-1/2 text-2xl"> <!-- Div de droite -->
                {{ user.nom }}
            </div>
        </div>
    <div class="flex space-x-4 mt-4 w-52">
        <div class="flex justify-start w-1/2 text-2xl">Prenom : </div>
        <div class="flex justify-end w-1/2 text-2xl"> {{ user.prenom }}</div>
    </div>
    <div class="flex space-x-4 mt-4 w-52">
    <div class="flex justify-start w-1/2 text-2xl">Email : </div>
    <div class="flex justify-end w-1/2 text-2xl"> {{ user.email }}</div>
    </div>
        <div class="flex space-x-4 mt-4 w-52">
            <div class="flex justify-start w-1/2 text-2xl">Role : </div>
            <div class="flex-col justify-end w-1/2 text-2xl">
            {% for role in user.roles %}
                  <div> {{ role }} </div>
            {% endfor %}
        </div>
        </div>
<a href="{{path ('_modificationProfil', { 'id': user.id }) }}" class="h-6 w-auto hover:text-red-500 duration-200 mt-8 text-2xl"> Modification du profil</a>
    </div>
{% endblock %}
