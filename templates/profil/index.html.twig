{% extends 'base.html.twig' %}

{% block body %}
<h1 class="flex content-center justify-center text-5xl mt-12"> Profil de {{ user.prenom }} </h1>
    <div class="flex flex-col items-center justify-center mt-12">
        <div class="flex space-x-4  w-64">
            <div class="flex justify-end w-1/2 text-2xl mr-5">
                Nom :
            </div>
            <div class="flex justify-start w-1/2 text-2xl ml-5">
                {{ user.nom }}
            </div>
        </div>
    <div class="flex space-x-4 mt-5 w-64">
        <div class="flex justify-end w-1/2 text-2xl mr-5 ">Prenom : </div>
        <div class="flex justify-start w-1/2 text-2xl ml-5"> {{ user.prenom }}</div>
    </div>
    <div class="flex space-x-4 mt-5 w-64">
    <div class="flex justify-end w-1/2 text-2xl mr-5">Email : </div>
    <div class="flex justify-start w-1/2 text-2xl ml-5"> {{ user.email }}</div>
    </div>
        <div class="flex space-x-4 mt-5 w-64">
            <div class="flex justify-end w-1/2 text-2xl mr-1">Role : </div>
            <div class="flex-col justify-start w-1/2 text-2xl ml-14">
            {% for role in user.roles %}
                  <div> {{ role }} </div>
            {% endfor %}
        </div>
        </div>
<a href="{{path ('_modificationProfil', { 'id': user.id }) }}" class="h-6 w-auto hover:text-red-500 duration-200 mt-12 text-2xl"> Modification du profil</a>
    </div>
{% endblock %}
