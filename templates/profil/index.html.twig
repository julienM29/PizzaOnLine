{% extends 'base.html.twig' %}
{% block title %}PizzaOnLine - Profil{% endblock %}

{% block body %}
    <h1 class="flex content-center justify-center text-4xl mt-4 mb-6 text-gray-50 underline underline-offset-8"> Profil de {{ user.prenom }} {{ user.nom }}</h1>
    <div class="flex flex-wrap justify-center mb-12 mt-8">

    <div class="w-1/3">
        <div class="flex justify-center items-center">
            {% for message in app.flashes('success') %}
                <div class=" alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-first-name">
                    Nom :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ user.nom }}
                </div>
            </div>
            <div class="w-full md:w-1/2 px-3">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-last-name">
                    Prenom :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ user.prenom }}
                </div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-password">
                    Sexe :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ user.sexe }}
                </div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-password">
                    Email :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ user.email }}
                </div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-password">
                    Téléphone :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ numeroAvecEspaces }}
                </div>

            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                       for="grid-password">
                    Adresse :
                </label>
                <div class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    {{ user.adresse }}
                </div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full px-3">
                <a href="{{ path ('_modificationMotDePasse', { 'id': user.id }) }}"
                   class=" text-2xl text-blue-500 underline underline-offset-4"> Modifier le mot de passe</a>
            </div>
        </div>
        {% if is_granted('ROLE_GERANT') %}
        <div class="flex flex-wrap -mx-3 mb-2">
            {% else %}
            <div class="flex flex-wrap -mx-3 mb-2 hidden">
                {% endif %}
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-password">
                        Rôles :
                    </label>
                    <div class="text-gray-700 flex flex-col">
                        {% for role in user.roles %}
                            <div class="text-gray-50 text-lg">
                                {{ role }}
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
            <div class="flex justify-center items-center mb-12">
                <button type="submit"
                        class="btn flex justify-center items-center text-3xl text-white bg-blue-500 hover:bg-blue-700 font-bold">
                    <a href="{{ path ('_modificationProfil', { 'id': user.id }) }}"
                       class=" text-2xl underline underline-offset-4"> Modifier ses informations</a>
                </button>
            </div>
        </div>
    </div>


{% endblock %}