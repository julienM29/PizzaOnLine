{% extends 'base.html.twig' %}
{% block title %}PizzaOnLine - Modification du profil{% endblock %}

{% block body %}
    <h2 class="flex item-center justify-center text-5xl mt-2 mb-8 font-semibold"> Profil
        de {{ user.prenom }} {{ user.nom }}</h2>

    {{ form_errors(profilForm) }}
    {{ form_start(profilForm) }}
    <div class="flex flex-wrap justify-center mb-12 mt-8">

        <div class="w-1/3">
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-first-name">
                        {{ form_label(profilForm.nom) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.nom) }}"
                            value="{{ field_value(profilForm.nom) }}"
                            placeholder="{{ field_label(profilForm.nom) }}"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                            type="text"
                    >
                </div>
                <div class="w-full md:w-1/2 px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-last-name">
                        {{ form_label(profilForm.prenom) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.prenom) }}"
                            value="{{ field_value(profilForm.prenom) }}"
                            placeholder="{{ field_label(profilForm.prenom) }}"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                            type="text"
                    >
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-password">
                        {{ form_label(profilForm.sexe) }} :
                    </label>
                    <div>
                        {{ form_widget(profilForm.sexe) }}
                    </div>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-password">
                        {{ form_label(profilForm.telephone) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.telephone) }}"
                            value="{{ field_value(profilForm.telephone) }}"
                            placeholder="Téléphone"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            type="number"
                    >
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-4">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-password">
                        {{ form_label(profilForm.email) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.email) }}"
                            value="{{ field_value(profilForm.email) }}"
                            placeholder="email"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            type="email"
                    >
                </div>
            </div>
            {% block custom_roles_widget %}
                <ul class="mt-6 items-center w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    {% for choice in profilForm.roles %}
                        <li class="w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600">
                            <div class="flex items-center ps-3">
                                {{ form_widget(choice, {'attr': {'class': 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500'}}) }}
                                <label class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">{{ form_label(choice) }}</label>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endblock %}
            <div class="flex justify-center items-center mt-7 mb-20">
                <button type="submit"
                        class="btn flex justify-center items-center text-2xl text-white bg-blue-500 hover:bg-blue-700 font-bold">
                    Valider les nouvelles informations
                </button>
            </div>
            <div class="hidden" id="">
                {{ form_widget(profilForm.latitude, { 'id': 'latitude_form' }) }}
            </div>
            <div class="hidden" id="">
                {{ form_widget(profilForm.longitude, { 'id': 'longitude_form' }) }}
            </div>
        </div>
        <div class="w-5/12 ml-8">
            <div class="flex flex-wrap -mx-3 mb-2">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-password">
                        {{ form_label(profilForm.adresse) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.adresse) }}"
                            value="{{ field_value(profilForm.adresse) }}"
                            placeholder="Saisissez votre adresse"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            type="text"
                            onchange="window.showAdresse()"
                            id="adresseUser"
                    >
                </div>
            </div>
            <div class="flex flex-col">
                <div class="flex flex-col mr-4">
                    <div class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2 mt-3"> Adresses
                        correspondantes :
                    </div>
                    <select class="" id="conteneurAdresse">
                        <option value=""> Sélectionner une adresse</option>
                    </select>
                </div>
                <div class=" static z-10 ">
                    <div id="mapAdresse" class=" mt-6"></div>
                </div>
            </div>
        </div>

    </div>

    {{ form_end(profilForm) }}


    <script src="{{ asset('build/app.js') }}"></script>
    <script>
        window.onload = function () {
            initAdresse();
            var latitude = document.getElementById("latitude_form").value;
            var longitude = document.getElementById("longitude_form").value;
            flyToAdresseCoordonnee(latitude, longitude);
        };
        // Intercepte l'événement de touche pressée
        document.addEventListener('keydown', function (event) {
            // Si la touche pressée est la touche Entrée et le formulaire est en focus
            if (event.key === 'Enter' && document.activeElement.tagName !== 'BUTTON') {
                // Annule l'événement pour empêcher la soumission du formulaire
                event.preventDefault();
            }
        }
        if (event.key === 'Enter' && document.activeElement.id === 'adresseUser') {
            // Annule l'événement pour empêcher la soumission du formulaire
            window.showAdresse();
        }
        })
        ;

    </script>
{% endblock %}

