                            value="{{ field_value(profilForm.nom) }}"
                            placeholder="{{ field_label(profilForm.nom) }}"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                            type="text"
                    >
                </div>
                <div class="w-full md:w-1/2 px-3">
                    <label class="block uppercase tracking-wide text-gray-50 text-lg font-bold mb-2"
                           for="grid-last-name">
                        {{ form_label(profilForm.prenom) }} :
                    </label>
                    <input
                            name="{{ field_name(profilForm.prenom) }}"
                            value="{{ field_value(profilForm.prenom) }}"
                            placeholder="{{ field_label(profilForm.prenom) }}"
                            class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                            type="text"
