{% extends 'base.html.twig' %}


{% block body %}
    <h2 class="flex item-center justify-center text-5xl mt-8 mb-20"> La carte des pizzas : </h2>
    <div class="grid grid-cols-4 gap-4 mx-32 mb-20">
        {% for pizza in pizzas %}
            <div class="bg-gray-200 p-4 w-80 mb-6 flex flex-col justify-between">
                <img src="{{ pizza.urlImage }}" style="width: 300px; height: 250px;" class="mb-2">
                <div class="mb-2 text-2xl text-black font-bold">{{ pizza.nom }}</div>
                <div class="mb-2 text-xl text-black">{{ pizza.description }}</div>
                <div class="mb-2 text-xl text-black">
                    {% for ingredient in pizza.Ingredients %}
                        {{ ingredient.nom }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </div>
                <div class="mb-4 text-xl text-black">prix : {{ (pizza.prix) | number_format(2, '.', ',') }} â‚¬</div>
                <div class="flex item-center justify-center">
                    <a href="{{ path('_detailPizza', {'id': pizza.id}) }}" class="flex text-2xl hover:text-red-500 duration-200 text-black font-bold mr-5">Detail</a>
                    <a href="{{ path('_detailPizza', {'id': pizza.id}) }}" class="flex text-2xl hover:text-red-500 duration-200 text-black font-bold ml-5">Ajouter</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
