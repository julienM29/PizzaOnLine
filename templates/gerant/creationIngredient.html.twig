{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="flex content-center justify-center text-5xl mt-12 "> Ajouter un ingrédient au stock</h2>
    <div class="w-full flex flex-wrap mt-8">
        <div class="w-1/2 flex justify-end">
            <div class="mt-12 flex border-2 border-white px-4 py-4 rounded mr-6">
                {{ form_start(ingredientForm) }}
                <div class="flex mb-4 justify-end">
                    <div class="text-3xl mr-5">{{ form_label(ingredientForm.nom) }} :</div>
                    <div class="text-black">{{ form_widget(ingredientForm.nom, {'attr': {'style': 'width : 250px; font-size:1.25rem'}}) }}</div>
                </div>
                <div class="flex mb-4 justify-end">
                    <div class="text-3xl mr-5">{{ form_label(ingredientForm.categorie) }} :</div>
                    <div class="text-black">{{ form_widget(ingredientForm.categorie, {'attr': {'style': 'width : 250px; font-size:1.25rem'}}) }}</div>
                </div>
                <div class="flex mb-4 justify-end ">
                    <div class="text-3xl mr-5 ">Quantité :</div>
                    <div class="flex-wrap flex " >
                        <button type="button"
                                data-input-counter-decrement="quantity-input" id="decrement"
                                class="  bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-s-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                            <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true"
                                 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                      stroke-width="2" d="M1 1h16"/>
                            </svg>
                        </button>
                        <input type="text" data-input-counter data-input-counter-min="1"
                               data-input-counter-max="50" aria-describedby="helper-text-explanation" style="width:175px"
                               class="bg-gray-50 border-x-0 border-gray-300 h-11 text-center text-gray-900 text-xl focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                               placeholder="999" value="0" id="inputQuantite"
                               required>
                        <button type="button" id="increment"
                                data-input-counter-increment="quantity-input"
                                class=" bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:border-gray-600 hover:bg-gray-200 border border-gray-300 rounded-e-lg p-3 h-11 focus:ring-gray-100 dark:focus:ring-gray-700 focus:ring-2 focus:outline-none">
                            <svg class="w-3 h-3 text-gray-900 dark:text-white" aria-hidden="true"
                                 xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                      stroke-width="2" d="M9 1v16M1 9h16"/>
                            </svg>
                        </button>
                    </div>

                </div>

                <div class="flex mb-4 justify-end hidden">
                    <div class="text-3xl mr-5">{{ form_label(ingredientForm.quantite) }}</div>
                    <div class="text-black">{{ form_widget(ingredientForm.quantite, {'id': 'quantiteModal','attr': {'style': 'width : 250px; font-size:1.25rem'}}) }}</div>
                </div>

                <div class="flex justify-center item-center text-3xl hover:text-red-500 duration-200 font-bold mt-8">
                    {{ form_label(ingredientForm.ajouter) }}
                    {{ form_widget(ingredientForm.ajouter, {'attr': {'style': 'width : 250px'}}) }}
                </div>
                {{ form_end(ingredientForm) }}
            </div>
        </div>


        <div class="w-1/2">
            <div class="mt-12 px-2 border-2 border-white w-96">
                <div class="flex justify-between mb-4 ">
                    <div class="text-3xl">Ingrédients</div>
                    <div class="text-3xl">Quantité</div>
                </div>

                {% for ingredient in allIngredient %}
                    <div class="flex justify-between mb-4 hidden {{ ingredient.categorie.libelle }}">
                        <div class="text-3xl">{{ ingredient.nom }}</div>
                        <div class="text-3xl">{{ ingredient.quantite }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="flex justify-center item-center text-2xl hover:text-red-500 duration-200 font-bold ">
        <a href="{{ path('_gerant') }}" class="mt-12">Retour à la page de gestion</a>
    </div>





    <script src="{{ asset('build/app.js') }}"></script>
    <script>
        window.onload = function () {
            initIngredient();
        };
    </script>
{% endblock %}



