{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="flex item-center justify-center text-5xl mt-8 mb-20"> Gestion des collaborateurs</h2>
        <div class="grid grid-cols-4 gap-4 mx-32 mb-20">
    {% for collaborateur in collaborateurs %}
            <div class="bg-gray-200 p-4 w-80 mb-6 flex flex-col justify-between">
                <div class="mb-2 text-xl text-black">Nom : {{ collaborateur.nom }}</div>
                <div class="mb-2 text-xl text-black">Pr√©nom : {{ collaborateur.prenom }}</div>
                <div class="mb-2 text-xl text-black">Email : {{ collaborateur.email }}</div>
                {% if collaborateur.roles is not empty %}
                    <div class="flex space-x-4 mt-5 w-64">
                        <div class="flex justify-start w-1/2 text-2xl mr-1 text-black">Role :</div>
                        <div class="flex-col justify-start w-1/2 text-2xl ml-14">
                            {% for role in collaborateur.roles %}
                                <div class="mb-4 text-xl text-black">{{ role }}</div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                <a href="{{ path('_modificationProfil', { 'id': collaborateur.id }) }}"
                   class="flex justify-center item-center text-2xl hover:text-red-500 duration-200 text-black font-bold">Modifier
                    le profil</a>
            </div>

    {% endfor %}
        </div>
{% endblock %}

